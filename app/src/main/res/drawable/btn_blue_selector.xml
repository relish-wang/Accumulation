<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/title_bg_color_dark" />
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="@color/title_bg_color_dark" />
            <!-- 矩形的圆角半径 -->
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/title_bg_color" />
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="@color/title_bg_color" />
            <!-- 矩形的圆角半径 -->
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>