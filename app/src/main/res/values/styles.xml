<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--整个应用的背景颜色-->
        <item name="android:windowBackground">@color/gray_3</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 内容文本 -->
    <style name="ContentText">
        <!--字体颜色大小-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/content_text_color</item>
    </style>

    <!-- 标题文本 -->
    <style name="TitleText">
        <!-- 字体颜色大小 -->
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <!-- 输入框 -->
    <style name="EditText">
        <!-- 字体颜色大小 -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/content_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <!--输入框大小-->
        <item name="android:minHeight">35dp</item>
        <!--对齐方式-->
        <item name="android:gravity">center_vertical</item>
        <!--背景-->
        <item name="android:background">@drawable/edit_text_bg</item>
        <!--文字与边框间距-->
        <item name="android:padding">10dp</item>
        <!--游标样式-->
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/btn_blue_shape</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
</resources>
