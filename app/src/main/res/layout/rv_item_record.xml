<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivHeadIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@mipmap/record"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tvHardTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:text="00:00:00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvRecordName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ivHeadIcon"
        android:layout_toLeftOf="@id/tvHardTime"
        android:layout_toRightOf="@id/ivHeadIcon"
        android:layout_toStartOf="@id/tvHardTime"
        android:maxLines="1"
        android:padding="10dp"
        android:text="JAVA学习JAVA学习JAVA学习JAVA学习JAVA学习JAVA学习"
        android:textSize="20sp" />
</RelativeLayout>